{
  "AvitoHelperDatabase": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "AvitoHelper",
    "UserCollectionName": "User",
    "AdsCollectionName": "Ads",
    "PositionStatisticsCollectionName": "PositionStatistics"
  },
  "Logging": {
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "System": "Error",
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Error",
        "Microsoft.EntityFrameworkCore": "Error"
      }
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },

    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {RequestId} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }

}
